{
    "name": "elements-reference-app-backend",
    "version": "1.0.0",
    "description": "Affinidi Elements. Backend-proxy-service for Reference Application",
    "author": "affinidi.com",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run tsc",
        "start:prod": "node ./dist/index.js",
        "start:dev": "ts-node src/index.ts",
        "dev": "nodemon --exec 'npm run start:dev' | pino-pretty",
        "tsc": "tsc",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "npm run lint -- --fix",
        "test": "npm run lint && npm run build && npm run test",
        "checkLicenses": "license-checker --production --failOn 'AGPL 3.0;LGPL 2.1'",
        "prepare-commit-hooks": "npm install --global commitizen@4.2.4 cz-conventional-changelog@3.3.0 @commitlint/config-conventional@16.2.1 @commitlint/cli@16.2.3",
        "prepare:dev": "is-ci || (husky install && npm run prepare-commit-hooks)",
        "prepare": "node -e \"process.exit(process.env.NODE_ENV === 'production' ? 0 : 1)\" || npm run prepare:dev"
    },
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@affinidi/eslint-config": "^2.0.0-beta.0",
        "@affinidi/prettier-config": "^2.0.0-beta.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/js-yaml": "3.12.5",
        "@types/node": "^18.11.9",
        "@types/redis": "2.8.28",
        "@types/sinon": "9.0.8",
        "@types/supertest": "2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "cross-env": "^7.0.3",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-security": "^1.4.0",
        "husky": "^7.0.4",
        "is-ci": "^3.0.1",
        "jest": "^27.0.6",
        "license-checker": "25.0.1",
        "nodemon": "2.0.6",
        "nyc": "^15.1.0",
        "pino-pretty": "3.6.1",
        "prettier": "^2.3.2",
        "supertest": "4.0.2",
        "ts-jest": "^27.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.3.5"
    }
}
